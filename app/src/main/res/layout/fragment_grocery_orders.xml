<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/grocery_toolbar"
    android:layout_width="match_parent"
    android:background="@drawable/bck_app"
    android:layout_height="?attr/actionBarSize"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    app:titleTextColor="@color/white"
    app:navigationIcon="@drawable/ic_arrow_back_white"
      >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Grocery"
              android:layout_weight="1"
              android:textColor="@color/white"
              android:textSize="8pt"
              android:textStyle="bold"
              />
          <Button
              android:id="@+id/buttn_viewcart"
              android:layout_width="200dp"
              android:layout_marginRight="10dp"
              android:layout_height="40dp"
              android:layout_marginTop="3dp"
              android:layout_marginBottom="3dp"
              android:text="View Cart"
              android:layout_weight="1"
              android:background="@drawable/button_cream"
              />
      </LinearLayout>
  </androidx.appcompat.widget.Toolbar>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/grocery_toolbar"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Upload your List here"
            android:background="@drawable/edit_text_box"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingStart="15dp"
            android:focusable="false"
            android:clickable="true"
            android:editable="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingEnd="10dp"
            android:drawableRight="@drawable/ic_file_upload_black_24dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:layout_margin="4dp"
            app:cardElevation="5dp"
            android:padding="2dp"
            >
            <LinearLayout
                android:id="@+id/foodlyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                android:layout_margin="3dp"
                >
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="60pt"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        >

                        <ImageView
                            android:id="@+id/gi1"
                            android:layout_width="100pt"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            />
                        <ImageView
                            android:id="@+id/gi2"
                            android:layout_width="100pt"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:paddingLeft="3dp"
                            />
                        <ImageView
                            android:id="@+id/gi3"
                            android:layout_width="100pt"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:paddingLeft="3dp"
                            />

                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/tx_salename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food  Products"
                    android:textColor="@color/dark_blue"
                    style="@style/bold_tx"
                    android:textSize="8pt"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:layout_margin="4dp"
            android:elevation="5dp"
            android:padding="2dp"
            >
            <LinearLayout
                android:id="@+id/non_foodlyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                android:layout_margin="3dp"
                >
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="60pt"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        >

                        <ImageView
                            android:id="@+id/gi11"
                            android:layout_width="100pt"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            />
                        <ImageView
                            android:id="@+id/gi22"
                            android:layout_width="100pt"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:paddingLeft="3dp"
                            />
                        <ImageView
                            android:id="@+id/gi33"
                            android:layout_width="100pt"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:paddingLeft="3dp"
                            />

                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non  Food  Products"
                    android:textColor="@color/dark_blue"
                    style="@style/bold_tx"
                    android:textSize="8pt"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:layout_margin="4dp"
            android:elevation="5dp"
            android:padding="2dp"
            >
            <LinearLayout
                android:id="@+id/additional_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                android:layout_margin="3dp"
                >

                <ImageView
                    android:layout_width="100pt"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/shopping_basket"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional  Items"
                    android:textColor="@color/dark_blue"
                    style="@style/bold_tx"
                    android:textSize="8pt"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

</RelativeLayout>