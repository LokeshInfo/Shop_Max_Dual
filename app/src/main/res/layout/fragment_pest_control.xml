<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pest_toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/bck_app"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Pest Control"
        app:titleTextColor="@color/white"
        style="@style/bold_tx"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/pest_toolbar"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="13dp"
        android:paddingBottom="10pt"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_below="@+id/gastoolbar"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp" >

                <ImageView
                    android:id="@+id/cy1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pest_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:text="Bed Bugs Control"
                    android:gravity="start"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/cy1"
                    />
                <CheckBox
                    android:id="@+id/ch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp" >

                <ImageView
                    android:id="@+id/cy2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pest_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:text="Cockroaches"
                    android:gravity="start"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/cy2"
                    />
                <CheckBox
                    android:id="@+id/ch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_below="@+id/gastoolbar"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp" >

                <ImageView
                    android:id="@+id/cy3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pest_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:text="Others"
                    android:gravity="start"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/cy3"
                    />
                <CheckBox
                    android:id="@+id/ch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer can inform us their requirements"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/cf_time"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="3dp"
            android:hint="Enter Requirements"
            android:textColorHint="@color/light_grey"
            android:background="@drawable/edit_text"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:singleLine="false"
            android:padding="2dp"
            android:focusableInTouchMode="true"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:drawablePadding="10dp"
            style="@style/ed_txt"
            android:autoLink="none"
            android:autoText="false"
            />
        <EditText
            android:id="@+id/pt_district"
            style="@style/ed_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:autoLink="none"
            android:autoText="false"
            android:background="@drawable/edit_text"
            android:drawablePadding="10dp"
            android:focusableInTouchMode="true"
            android:hint="Enter District"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColorHint="@color/light_grey" />
        <EditText
            android:id="@+id/pt_age"
            style="@style/ed_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:autoLink="none"
            android:autoText="false"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:drawablePadding="10dp"
            android:focusableInTouchMode="true"
            android:hint="Enter City"
            android:inputType="text"
            android:padding="2dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColorHint="@color/light_grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/talk_customer"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/ic_call"
            android:textAlignment="textStart"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/initiate_request"
            android:textColor="@color/grey"
            android:textSize="6pt"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:singleLine="false"
            />

        <Button
            android:id="@+id/pest_book"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/button"
            android:layout_marginTop="15pt"
            android:text="Book Now"
            android:textColor="@color/white"
            android:textSize="8pt"
            style="@style/bold_tx"
            />


    </LinearLayout>
    </ScrollView>

</RelativeLayout>