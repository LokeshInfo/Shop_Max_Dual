<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/backpress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/passcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/txx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="12pt"
        android:textColor="@color/black"
        style="@style/bold_tx"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="18dp"
        />

    <LinearLayout
        android:id="@+id/Linr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="20pt"
        android:layout_below="@+id/txx"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tx_vu"
            android:text="@string/entry_forgot"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:hint="Email or Phone Number"
            android:textColorHint="@color/light_grey"
            android:background="@drawable/edit_text"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:padding="2dp"
            android:drawableRight="@drawable/ic_user"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:drawablePadding="10dp"
            style="@style/ed_txt"
            android:inputType="text"
            android:autoLink="none"
            android:autoText="false"
            />

        <Button
            android:id="@+id/button_sendOtp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/button"
            android:layout_marginTop="20pt"
            android:text="Send OTP"
            android:textColor="@color/white"
            android:textSize="8pt"
            android:textAllCaps="false"
            style="@style/tx_vu"
            android:onClick="Send_Click"
            />

    </LinearLayout>


    <Button
        android:id="@+id/button_sendOtp2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_rect"
        android:layout_marginTop="20pt"
        android:text="Send OTP"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        style="@style/tx_vu"
        android:onClick="Send_Click"
        android:visibility="gone"
        />


</RelativeLayout>