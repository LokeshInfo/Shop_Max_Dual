<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/patient_toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/bck_app"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Patient Details"
        app:titleTextColor="@color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ScrollView
        android:id="@+id/scrll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="?actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="13dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/pt_name"
                style="@style/ed_txt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="3dp"
                android:autoLink="none"
                android:autoText="false"
                android:background="@drawable/edit_text"
                android:drawableRight="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:focusableInTouchMode="true"
                android:hint="Enter Name"
                android:inputType="text"
                android:padding="2dp"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColorHint="@color/light_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Mobile No."
                android:textColor="@color/black"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/pt_phone"
                style="@style/ed_txt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="3dp"
                android:autoLink="none"
                android:autoText="false"
                android:background="@drawable/edit_text"
                android:drawableRight="@drawable/ic_call"
                android:drawablePadding="10dp"
                android:focusableInTouchMode="true"
                android:hint="Enter Mobile No."
                android:inputType="number"
                android:padding="2dp"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColorHint="@color/light_grey" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/ht_mail"
                style="@style/ed_txt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="3dp"
                android:autoLink="none"
                android:autoText="false"
                android:background="@drawable/edit_text"
                android:drawablePadding="10dp"
                android:focusableInTouchMode="true"
                android:hint="Enter Email Address"
                android:inputType="text"
                android:padding="2dp"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColorHint="@color/light_grey" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="8pt" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <RadioGroup
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="5dp"
                  android:layout_weight="1"
                  >
              <RadioButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Male"
                  android:textSize="8pt"
                  />
              <RadioButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Female"
                  android:textSize="8pt"
                  android:layout_marginLeft="20dp"
                  />
              </RadioGroup>
          </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/pt_age"
                style="@style/ed_txt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:autoLink="none"
                android:autoText="false"
                android:background="@drawable/edit_text"
                android:drawablePadding="10dp"
                android:focusableInTouchMode="true"
                android:hint="Age"
                android:inputType="number"
                android:padding="2dp"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColorHint="@color/light_grey" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/let_us_konw_request"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="8pt" />
            <EditText
                android:id="@+id/pt_request"
                style="@style/ed_txt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:autoLink="none"
                android:autoText="false"
                android:background="@drawable/edit_text"
                android:drawablePadding="10dp"
                android:focusableInTouchMode="true"
                android:hint="Request"
                android:inputType="number"
                android:padding="2dp"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColorHint="@color/light_grey" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/talk_customer"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/ic_call"
                />

            <Button
                android:id="@+id/buttn_ptsubmit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/button"
                android:layout_marginTop="15pt"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="8pt"
                style="@style/bold_tx"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>