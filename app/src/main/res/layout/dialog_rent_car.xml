<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date From"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/ed_fromdate"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="3dp"
            android:hint="DD / MM / YYYY"
            android:textColorHint="@color/light_grey"
            android:background="@drawable/edit_text"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:padding="2dp"
            android:focusable="false"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:drawablePadding="10dp"
            style="@style/ed_txt"
            android:autoLink="none"
            android:inputType="text"
            android:editable="false"
            android:clickable="true"
            android:autoText="false"
            android:drawableRight="@drawable/ic_perm_contact_calendar"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Till"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/ed_todate"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="3dp"
            android:hint="DD / MM / YYYY"
            android:textColorHint="@color/light_grey"
            android:background="@drawable/edit_text"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:focusable="false"
            android:padding="2dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:drawablePadding="10dp"
            style="@style/ed_txt"
            android:autoLink="none"
            android:inputType="text"
            android:editable="false"
            android:clickable="true"
            android:autoText="false"
            android:drawableRight="@drawable/ic_perm_contact_calendar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Number of Days : "
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            />

            <TextView
                android:id="@+id/total_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Days"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="textStart"
                style="@style/bold_tx"
                />




        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/talk_customer"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:paddingEnd="10dp"
            android:drawableRight="@drawable/ic_call"
            android:textAlignment="textStart"
            />

        <Button
            android:id="@+id/buttn_bookcard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Book  Now  to get best fare"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>