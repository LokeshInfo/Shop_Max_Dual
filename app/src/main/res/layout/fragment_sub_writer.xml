<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/wwr_toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/bck_app"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Customer Details"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/wwr_toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="13dp"
            android:paddingBottom="10pt"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="9dp"
                android:hint="Enter Name"
                android:textColorHint="@color/light_grey"
                android:background="@drawable/edit_text"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:padding="2dp"
                android:focusableInTouchMode="true"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:drawablePadding="10dp"
                style="@style/ed_txt"
                android:autoLink="none"
                android:inputType="text"
                android:autoText="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/ht_mobile"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="9dp"
                android:hint="Enter Mobile Number"
                android:textColorHint="@color/light_grey"
                android:background="@drawable/edit_text"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:padding="2dp"
                android:focusableInTouchMode="true"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:drawablePadding="10dp"
                style="@style/ed_txt"
                android:autoLink="none"
                android:inputType="number"
                android:autoText="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="9dp"
                android:hint="Enter Email"
                android:textColorHint="@color/light_grey"
                android:background="@drawable/edit_text"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:padding="2dp"
                android:focusableInTouchMode="true"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:drawablePadding="10dp"
                style="@style/ed_txt"
                android:autoLink="none"
                android:inputType="text"
                android:autoText="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/place"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="9dp"
                android:hint="Enter Place"
                android:textColorHint="@color/light_grey"
                android:background="@drawable/edit_text"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:padding="2dp"
                android:focusableInTouchMode="true"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:drawablePadding="10dp"
                style="@style/ed_txt"
                android:autoLink="none"
                android:inputType="text"
                android:autoText="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="9dp"
                android:hint="Enter Date"
                android:textColorHint="@color/light_grey"
                android:background="@drawable/edit_text"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:padding="2dp"
                android:focusableInTouchMode="true"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:drawablePadding="10dp"
                style="@style/ed_txt"
                android:autoLink="none"
                android:inputType="text"
                android:autoText="false"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/talk_customer"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_call"
                android:textAlignment="textStart"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/initiate_request"
                android:textColor="@color/grey"
                android:textSize="6pt"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:singleLine="false"
                />



            <Button
                android:id="@+id/buttn_wwr"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/button"
                android:layout_marginTop="15dp"
                android:text="Book Now"
                android:textColor="@color/white"
                android:textSize="8pt"
                style="@style/bold_tx"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>